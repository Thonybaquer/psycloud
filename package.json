{
  "name": "psycloud",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron .",
    "build": "npm run build:web && electron-builder",
    "start": "next start",
    "seed": "tsx src/scripts/seed.ts",
    "doctor": "node scripts/doctor.mjs",
    "dev:web": "next dev",
    "build:web": "next build",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "next": "^15.5.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tiptap/react": "^2.11.0",
    "@tiptap/starter-kit": "^2.11.0",
    "@tiptap/html": "^2.11.0",
    "@tiptap/extension-image": "^2.11.0",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.30.10",
    "lucide-react": "^0.469.0",
    "sonner": "^1.5.0",
    "isomorphic-dompurify": "^2.12.0",
    "zod": "^3.23.8",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "@fullcalendar/react": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "@tiptap/extension-link": "^2.5.0",
    "@tiptap/extension-underline": "^2.5.0",
    "@tiptap/extension-placeholder": "^2.5.0",
    "xlsx": "^0.18.5",
    "bcryptjs": "^2.4.3",
    "jose": "^5.6.3",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "tsx": "^4.19.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/better-sqlite3": "^7.6.10",
    "tailwindcss": "^3.4.4",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.19",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "description": "PsyCloud - Historia clínica y agenda para psicología",
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.psycloud.desktop",
    "productName": "PsyCloud",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json",
      "next.config.mjs",
      "src/**/*"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "publish": [
    {
      "provider": "github"
    }
  ],
  "engines": {
    "node": "20.x"
  }
}
